{
  "parser": "babel-eslint",
  "extends": [
    "standard",
    "standard-react"
  ],
  "plugins": [
    "babel",
    "react",
    "promise"
  ],
  "env": {
    "browser" : true
  },
  "globals": {
    "__DEV__"      : false,
    "__TEST__"     : false,
    "__PROD__"     : false,
    "__COVERAGE__" : false
  },
  "rules": {
    "key-spacing"          : 0,
    "jsx-quotes"           : [0, "prefer-single"],
    "max-len"              : [2, 120, 2],
    "semi": "off",
    "no-unused-vars": "warn",
    "no-trailing-spaces": "warn",
    "no-multiple-empty-lines": "off",
    "padded-blocks": "off",
    "eol-last": "warn",
    "react/jsx-space-before-closing": 0,
    "object-curly-spacing" : [2, "always"]
  }
}

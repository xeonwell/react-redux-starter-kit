{
  "parser" : "babel-eslint",
  "extends": [
    "standard",
    "standard-react"
  ],
  "plugins": [
    "babel",
    "react",
    "promise"
  ],
  "env"    : {
    "browser": true
  },
  "globals": {
    "__DEV__"     : false,
    "__TEST__"    : false,
    "__PROD__"    : false,
    "__COVERAGE__": false
  },
  "rules"  : {
    "key-spacing"                   : 0,
    "jsx-quotes"                    : [0, "prefer-single"],
    "max-len"                       : [2, 120, 2],
    "semi"                          : 0,
    "comma-dangle"                  : 0,
    "no-unused-vars"                : 1,
    "no-trailing-spaces"            : 1,
    "no-multiple-empty-lines"       : 0,
    "no-multi-spaces"               : 0,
    "padded-blocks"                 : 0,
    "eol-last"                      : 1,
    "react/jsx-space-before-closing": 0,
    "react/no-unused-prop-types"    : 1,
    "object-curly-spacing"          : [0, "always"]
  }
}
